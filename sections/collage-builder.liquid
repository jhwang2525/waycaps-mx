{% capture section_style_attr %}
  style="padding-top:{{ section.settings.padding_top }}px;padding-bottom:{{ section.settings.padding_bottom }}px;"
{% endcapture %}

{% if section.blocks.size > 0 %}
  <section data-wetheme-section-type="collage-builder" data-wetheme-section-id="{{ section.id }}" class="homepage-sections-wrapper--{{ section.settings.color_scheme }}" {{ section_style_attr }}>

    <div {% if section.settings.section_width == 'page' %}class="container"{% endif %}>
      {% if section.settings.title != blank or section.settings.subheading != blank %}
        <div class="title-bar collage-builder__header{% if section.settings.section_width == 'full' %} collage-builder__header--with-padding{% endif %}">
          {% if section.settings.subheading != blank %}
            <h3 class="type-subheading type-subheading--1 typography--padding-bottom">{{ section.settings.subheading | escape }}</h2>
          {% endif %}
          {% if section.settings.title != blank %}
            <h2 class="collage-builder__section-heading">{{ section.settings.title | escape }}</h2>
          {% endif %}
        </div>
      {% endif %}

      <div class="collage-builder__grid-wrapper">
        <div class="collage-builder__grid-container collage-builder__grid-container--{{ section.id }}">
          {% for block in section.blocks %}

            {% comment %} Text overlay content (image, background video, text and html blocks) {% endcomment %}
            {% capture text_content %}
              <div class="collage-builder__text-container collage-builder__text-container--{{ block.id }} {{ block.settings.desktop_position }} {{ block.settings.mobile_position }}">
                <div class="collage-builder__text-container--inner">
                  {% if block.settings.heading != blank %}
                    <h2 class="collage-builder__heading">{{ block.settings.heading }}</h2>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <p class="collage-builder__text-content">{{ block.settings.text }}</p>
                  {% endif %}
                  {% if block.settings.html != blank %}
                    <div class="collage-builder__text-content">{{ block.settings.html }}</div>
                  {% endif %}
                  {% if block.settings.button_label != blank and block.settings.url != blank %}
                    <a href="{{ block.settings.url }}" class="btn collage-builder__button">{{ block.settings.button_label }}</a>
                  {% endif %}
                </div>
              </div>
            {% endcapture %}

            {% comment %} Block width/height setting id {% endcomment %}
            {% assign width_setting_id = 'width_' | append: forloop.index %}
            {% assign height_setting_id = 'height_' | append: forloop.index %}

            {% comment %} Video blocks type assignment {% endcomment %}
            {% if block.type == 'background_video' or block.type == 'video' %}
              {% assign type = 'mp4' %}
              {% unless block.settings.video %}
                {% assign type = block.settings.video_url.type %}
              {% endunless %}

              {% assign mobile_type = 'mp4' %}
              {% unless block.settings.mobile_video %}
                {% assign mobile_type = block.settings.mobile_video_url.type %}
              {% endunless %}
            {% endif %}

            {% case block.type %}

              {% when 'image' %}

                {% comment %} Image block content and styles {% endcomment %}
                {% capture block_content %}
                  <div class="collage-builder__media-wrapper">
                    {{ text_content }}

                    <div class="collage-builder__image collage-builder__image--{{ block.id }}">
                      {% if block.settings.desktop_image == blank %}
                        {% assign default_block_position = block.id | slice: -2, 2 %}
                        {% case default_block_position %}
                          {% when '-4' %}
                            {% assign placeholder_name = 'collection-1' %}
                          {% when '-5' %}
                            {% assign placeholder_name = 'lifestyle-1' %}
                          {% else %}
                            {% assign placeholder_name = 'image' %}
                        {% endcase %}
                        {{ placeholder_name | placeholder_svg_tag: 'icon--placeholder' }}
                      {% endif %}
                      {% if block.settings.mobile_image != blank %}
                        {% render 'responsive-image' with block.settings.mobile_image, class: 'collage-builder__mobile-image', alt: section.settings.mobile_image.alt %}
                      {% endif %}
                    </div>

                    <div class="collage-builder__overlay"></div>
                  </div>

                  <style>
                    {% if block.settings.desktop_image != blank %}
                      {% capture selector %}.collage-builder__image--{{ block.id }}{% endcapture %}
                      {% if block.settings.mobile_image != blank %}
                        @media screen and (min-width: 768px) {
                          {% render 'responsive-background-image' with block.settings.desktop_image, selector: selector %}
                        }
                      {% else %}
                        {% render 'responsive-background-image' with block.settings.desktop_image, selector: selector %}
                      {% endif %}
                    {% endif %}

                    @media screen and (min-width: 768px) {
                      .collage-builder__text-container--{{ block.id }} {
                        text-align: {{ block.settings.desktop_position | split: '-' | last }};
                      }
                    }
                    @media screen and (max-width: 767px) {
                      .collage-builder__text-container--{{ block.id }} {
                        text-align: {{ block.settings.mobile_position | split: '-' | last }};
                      }
                    }
                  </style>
                {% endcapture %}

              {% when 'background_video' %}

                {% comment %} Determine whether the block aspect ratio is narrower than or wider than the 16:9 video aspect ratio, and expand iframe height or width accordingly to fill the available space {% endcomment %}
                {% assign block_aspect = section.settings[height_setting_id] | divided_by: section.settings[width_setting_id] %}
                {% if block_aspect > 1.78 %}
                  {% assign block_aspect_type = 'wide' %}
                {% else %}
                  {% assign block_aspect_type = 'narrow' %}
                {% endif %}

                {% comment %} Background video block content and styles {% endcomment %}
                {% capture block_content %}
                  <div class="collage-builder__media-wrapper">
                    
                    {{ text_content }}

                    <div class="collage-builder__background-video collage-builder__background-video--desktop collage-builder__background-video--{{ block_aspect_type }} type-{{ type }}{% if type == 'youtube' or type == 'vimeo' %} embed-container{% endif %}">
                      {% if block.settings.video %}
                        {% render 'native-video' with video: block.settings.video, autoplay: true, loop: true, muted: true, overlay: false, controls: false %}
                      {% elsif block.settings.video_url %}
                        <wetheme-video
                          hero="true"
                          video-type="{{ type }}"
                          url="{{ block.settings.video_url }}"
                          autoplay="true"
                          loop="true"
                          mute="true"
                          hide-controls="true"
                        >
                        </wetheme-video>
                      {% endif %}
                    </div>

                    {% if block.settings.mobile_video_url != blank or block.settings.mobile_video %}
                      <div class="collage-builder__background-video collage-builder__background-video--mobile type-{{ mobile_type }}{% if type == 'youtube' or type == 'vimeo' %} embed-container{% endif %}">
                        {% if block.settings.mobile_video %}
                          {% render 'native-video' with video: block.settings.mobile_video, autoplay: true, loop: true, muted: true, overlay: false, controls: false %}
                        {% elsif block.settings.mobile_video_url %}
                          <wetheme-video
                            hero="true"
                            video-type="{{ mobile_type }}"
                            url="{{ block.settings.mobile_video_url }}"
                            autoplay="true"
                            loop="true"
                            mute="true"
                            hide-controls="true"
                          >
                          </wetheme-video>
                        {% endif %}
                      </div>
                    {% endif %}

                    <div class="collage-builder__overlay"></div>
                  </div>

                  <style>
                    @media screen and (min-width: 768px) {
                      .collage-builder__text-container--{{ block.id }} {
                        text-align: {{ block.settings.desktop_position | split: '-' | last }};
                      }
                    }
                    @media screen and (max-width: 767px) {
                      .collage-builder__text-container--{{ block.id }} {
                        text-align: {{ block.settings.mobile_position | split: '-' | last }};
                      }
                    }
                  </style>
                {% endcapture %}

              {% when 'video' %}

                {% comment %} Video block content and styles {% endcomment %}
                {% capture block_content %}
                  <div class="collage-builder__media-wrapper">
                    <div class="collage-builder__video collage-builder__video--desktop type-{{ type }}{% if type == 'youtube' or type == 'vimeo' %} embed-container{% endif %}">
                      {% if block.settings.video %}
                        {% render 'native-video' with video: block.settings.video, autoplay: false, loop: false, muted: false, overlay: true, controls: true %}
                      {% elsif block.settings.video_url %}
                        <wetheme-video
                          hero="false"
                          video-type="{{ type }}"
                          url="{{ block.settings.video_url }}"
                          autoplay="false"
                          loop="false"
                          mute="false"
                          has-overlay="true"
                        >
                        </wetheme-video>
                      {% endif %}
                    </div>
                    {% if block.settings.mobile_video_url != blank or block.settings.mobile_video %}
                      <div class="collage-builder__video collage-builder__video--mobile type-{{ mobile_type }}{% if type == 'youtube' or type == 'vimeo' %} embed-container{% endif %}">
                        {% if block.settings.mobile_video %}
                          {% render 'native-video' with video: block.settings.mobile_video, autoplay: false, loop: false, muted: false, overlay: true, controls: true %}
                        {% elsif block.settings.mobile_video_url %}
                          <wetheme-video
                            hero="false"
                            video-type="{{ mobile_type }}"
                            url="{{ block.settings.mobile_video_url }}"
                            autoplay="false"
                            loop="false"
                            mute="false"
                            has-overlay="true"
                          >
                          </wetheme-video>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                  <style>
                    {% if block.settings.cover_image %}
                      {% capture selector %}.collage-builder__grid-item--{{ block.id }} .video__overlay{% endcapture %}
                      {% render 'responsive-background-image' with block.settings.cover_image, selector: selector %}
                    {% endif %}

                    .collage-builder__video .video__overlay-button {
                      background-color: {{ block.settings.button_background_color }};
                    }
                    .collage-builder__video .video__overlay-button:hover {
                      background-color: {{ block.settings.button_background_hover_color }};
                    }
                    .collage-builder__video .video__overlay-button--inner {
                      border-color: transparent transparent transparent {{ block.settings.button_icon_color }};
                    }
                  </style>
                {% endcapture %}

              {% when 'text' or 'html' %}

                {% comment %} Text and html blocks content and styles {% endcomment %}
                {% capture block_content %}
                  {{ text_content }}

                  <style>
                    .collage-builder__text-container--{{ block.id }} {
                      text-align: {{ block.settings.text_alignment }};
                      background-color: {{ block.settings.background_color }};
                    }
                  </style>
                {% endcapture %}

            {% endcase %}

            {% comment %} Set flags {% endcomment %}
            {% if block.settings.url != blank and block.settings.button_label == blank %}
              {% assign block_is_link = true %}
            {% else %}
              {% assign block_is_link = false %}
            {% endif %}

            {% if block.settings.mobile_image != blank %}
              {% assign has_mobile_image = true %}
            {% else %}
              {% assign has_mobile_image = false %}
            {% endif %}

            {% if block.settings.mobile_video_url != blank or block.settings.mobile_video %}
              {% assign has_mobile_video = true %}
            {% else %}
              {% assign has_mobile_video = false %}
            {% endif %}

            {% comment %} Collage grid item content and styles (block type agnostic) {% endcomment %}
            <div class="collage-builder__grid-item collage-builder__grid-item--{{ section.id }}--{{ forloop.index }} collage-builder__grid-item--{{ block.type }} collage-builder__grid-item--{{ block.id }}{% if has_mobile_image %} collage-builder__grid-item--mobile-image{% endif %}{% if has_mobile_video %} collage-builder__grid-item--mobile-video{% endif %}{% if mobile_type == 'mp4' %} collage-builder__grid-item--mobile-video-mp4{% endif %} wow fadeInUp{% unless forloop.first %} delay-{{ forloop.index0 }}{% endunless %}" {{ block.shopify_attributes }}>
              <div class="collage-builder__grid-item--inner">
                <div class="collage-builder__content">
                  {% if block_is_link %}
                  <a href="{{ block.settings.url }}">
                  {% endif %}

                    {{ block_content }}

                  {% if block_is_link %}
                  </a>
                  {% endif %}
                </div>
              </div>
            </div>
            
            <style>
              @media screen and (min-width: 768px) {
                .collage-builder__grid-item--{{ section.id }}--{{ forloop.index }} {
                  width: calc(100% / ({{ section.settings[width_setting_id] }}));
                  padding-bottom: calc(100% / ({{ section.settings[height_setting_id] }}));
                }
                .collage-builder__grid-item--{{ block.id }} .collage-builder__heading {
                font-size: {{ block.settings.heading_size | append: 'px' }};
                }
              }
              @media screen and (max-width: 767px) {
                .collage-builder__grid-item--{{ section.id }}--{{ forloop.index }} {
                  padding-bottom: calc(100% / (({{ section.settings[height_setting_id] }})/({{ section.settings[width_setting_id] }})));
                }
                {% if block.settings.heading_size > 26 %}
                  .collage-builder__grid-item--{{ block.id }} .collage-builder__heading {
                    font-size: {{ block.settings.heading_size | times: 0.8 | append: 'px' }};
                  }
                {% endif %}
              }

              .collage-builder__text-container--{{ block.id }} {
                color: {{ block.settings.text_color }};
              }
              .collage-builder__grid-item--{{ block.id }} .collage-builder__button {
                color: {{ block.settings.button_color }};
                background-color: {{ block.settings.button_background_color }};
              }
              .collage-builder__grid-item--{{ block.id }} .collage-builder__button:hover,
              .collage-builder__grid-item--{{ block.id }} .collage-builder__button:focus {
                color: {{ block.settings.button_color }} !important;
                background-color: {{ block.settings.button_hover_background_color }} !important;
              }
              {% unless block.settings.overlay_color == 'rgba(0,0,0,0)' %}
                .collage-builder__grid-item--{{ block.id }} .collage-builder__overlay {
                  background: -webkit-linear-gradient(top, {{ block.settings.overlay_color | color_modify: 'alpha', 0.3 }} 0%, {{ block.settings.overlay_color | color_modify: 'alpha', 0.8 }} 75%);
                  background: linear-gradient(to bottom, {{ block.settings.overlay_color | color_modify: 'alpha', 0.3 }} 0%, {{ block.settings.overlay_color | color_modify: 'alpha', 0.8 }} 75%);
                }
              {% endunless %}
            </style>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
  <style>
    .collage-builder__grid-container--{{ section.id }} {
      align-items: {{ section.settings.block_alignment }};
    }
  </style>
{% endif %}

