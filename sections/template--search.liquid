      margin-bottom: 2.5rem;
    }

    .facets__wrapper {
      display: block !important;
    }
  {%- endif -%}

  {%- if section.settings.desktop_position == 'sidebar' %}
    .template-search .result-type-wrapper {
      padding: 0;
    }
  {% endif %}

