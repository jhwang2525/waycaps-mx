<div data-value="{{ value }}" class="swatch-element image-swatch swatch-element-{{ size }} {{ aspect_ratio }} {{ value | handle }} {% if available %}available{% else %}soldout{% endif %}">
  <div class="tooltip">{{ value }}</div>
  
  <input
    id="{{ section.id }}-swatch-{{ option_index }}-{{ value }}"
    type="radio"
    value="{{ value }}"
    {% if product_swatch %}
      name="option-{{ option_index }}"
    {% endif %}
    {% if checked == true %}
      checked
    {% endif %}
    {% if variation_redirect != blank %}
      onclick="window.location='{{ variation_redirect }}'; return false;"
    {% endif %} />
  
  {% if image_url != blank %}
    <label
      class="image-swatch-{{ size }} aspect-ratio--{{ aspect_ratio }}"
      for="{{ section.id }}-swatch-{{ option_index }}-{{ value }}"
      style="background-position: center; background-image: url({{ image_url }});{% if aspect_ratio == "original" %} --ar: {{ img_aspect_ratio }};{% endif %}"
      tabindex="0">
      <span class="sr-only">{{ value }}</span>
      <img loading="lazy"
        class="crossed-out"
        src="{{ 'soldout_color.svg' | asset_url }}"
        alt="" />
    </label>
  {% else %}
    <label
      class="image-swatch no-image image-swatch-{{ size }} aspect-ratio--{{ aspect_ratio }}"
      for="{{ section.id }}-swatch-{{ option_index }}-{{ value }}"
      {% if aspect_ratio == "original" %}style="--ar: 1;"{% endif %}
      tabindex="0">
      <span class="sr-only">{{ value }}</span>
      {{ 'product-1' | placeholder_svg_tag: 'icon--placeholder' }}
      <img loading="lazy"
        class="crossed-out"
        src="{{ 'soldout.svg' | asset_url }}"
        alt="" />
    </label>
  {% endif %}
</div>